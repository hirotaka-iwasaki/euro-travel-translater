default_platform(:ios)

platform :ios do
  before_all do
    sh("xcodegen", "generate", "--spec", "../project.yml")
  end

  # --- Helpers ---

  def api_key
    app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_API_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_API_ISSUER_ID"],
      key_content: ENV["APP_STORE_CONNECT_API_KEY_CONTENT"],
      is_key_content_base64: true,
      in_house: false
    )
  end

  def timestamp_build_number
    Time.now.strftime("%Y%m%d%H%M")
  end

  def ios_simulator_destination
    # Parse `simctl list` text output to find an iPhone under iOS 26+ runtime
    output = sh("xcrun simctl list devices available", log: false)
    in_ios26 = false
    preferred = ["iPhone 17 Pro", "iPhone 17", "iPhone 16 Pro", "iPhone 16"]
    found = {} # name => uuid

    output.each_line do |line|
      if line =~ /-- iOS ([\d.]+)/
        in_ios26 = ($1.split(".").first.to_i >= 26)
      elsif line =~ /-- /
        in_ios26 = false
      elsif in_ios26 && line =~ /(iPhone[^(]+)\(([A-F0-9-]+)\)/i
        name = $1.strip
        uuid = $2
        found[name] ||= uuid
      end
    end

    preferred.each do |name|
      if found[name]
        UI.message("Using simulator: #{name} (#{found[name]})")
        return "platform=iOS Simulator,id=#{found[name]}"
      end
    end

    # Fallback: first iPhone found in iOS 26+
    if (first = found.first)
      UI.message("Fallback simulator: #{first[0]} (#{first[1]})")
      return "platform=iOS Simulator,id=#{first[1]}"
    end

    "platform=iOS Simulator,name=iPhone 16"
  end

  # --- Lanes ---

  desc "Run unit tests"
  lane :test do
    run_tests(
      project: "EuroTravelTranslate.xcodeproj",
      scheme: "EuroTravelTranslate",
      destination: ios_simulator_destination,
      clean: true
    )
  end

  desc "Capture and frame screenshots"
  lane :screenshots do
    capture_screenshots(
      project: "EuroTravelTranslate.xcodeproj",
      scheme: "EuroTravelTranslate"
    )
    frame_screenshots(white: true)
  end

  desc "Build and upload to TestFlight"
  lane :beta do
    api = api_key
    build_number = timestamp_build_number

    match(
      type: "appstore",
      readonly: is_ci,
      api_key: api
    )

    increment_build_number(
      build_number: build_number,
      xcodeproj: "EuroTravelTranslate.xcodeproj"
    )

    build_app(
      project: "EuroTravelTranslate.xcodeproj",
      scheme: "EuroTravelTranslate",
      export_method: "app-store",
      output_directory: "./build",
      output_name: "EuroTravelTranslate.ipa"
    )

    upload_to_testflight(
      api_key: api,
      skip_waiting_for_build_processing: true
    )
  end

  desc "Full release: test → screenshots → build → App Store submit"
  lane :release do
    api = api_key
    build_number = timestamp_build_number

    # 1. Unit tests
    test

    # 2. Screenshots
    screenshots

    # 3. Code signing
    match(
      type: "appstore",
      readonly: is_ci,
      api_key: api
    )

    # 4. Set build number
    increment_build_number(
      build_number: build_number,
      xcodeproj: "EuroTravelTranslate.xcodeproj"
    )

    # 5. Build
    build_app(
      project: "EuroTravelTranslate.xcodeproj",
      scheme: "EuroTravelTranslate",
      export_method: "app-store",
      output_directory: "./build",
      output_name: "EuroTravelTranslate.ipa"
    )

    # 6. Upload to App Store with review submission
    upload_to_app_store(
      api_key: api,
      skip_screenshots: false,
      skip_metadata: false,
      force: true,
      submit_for_review: true,
      automatic_release: true,
      precheck_include_in_app_purchases: false
    )
  end
end
