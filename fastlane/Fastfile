default_platform(:ios)

platform :ios do
  before_all do
    sh("xcodegen", "generate", "--spec", "../project.yml")
  end

  # --- Helpers ---

  def api_key
    app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_API_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_API_ISSUER_ID"],
      key_content: ENV["APP_STORE_CONNECT_API_KEY_CONTENT"],
      is_key_content_base64: true,
      in_house: false
    )
  end

  def timestamp_build_number
    Time.now.strftime("%Y%m%d%H%M")
  end

  # --- Lanes ---

  desc "Run unit tests"
  lane :test do
    run_tests(
      project: "EuroTravelTranslate.xcodeproj",
      scheme: "EuroTravelTranslateTests",
      device: "iPhone 17 Pro",
      clean: true
    )
  end

  desc "Capture and frame screenshots"
  lane :screenshots do
    capture_screenshots(
      project: "EuroTravelTranslate.xcodeproj",
      scheme: "EuroTravelTranslateUITests"
    )
    frame_screenshots(white: true)
  end

  desc "Build and upload to TestFlight"
  lane :beta do
    api = api_key
    build_number = timestamp_build_number

    match(
      type: "appstore",
      readonly: is_ci,
      api_key: api
    )

    increment_build_number(
      build_number: build_number,
      xcodeproj: "EuroTravelTranslate.xcodeproj"
    )

    build_app(
      project: "EuroTravelTranslate.xcodeproj",
      scheme: "EuroTravelTranslate",
      export_method: "app-store",
      output_directory: "./build",
      output_name: "EuroTravelTranslate.ipa"
    )

    upload_to_testflight(
      api_key: api,
      skip_waiting_for_build_processing: true
    )
  end

  desc "Full release: test → screenshots → build → App Store submit"
  lane :release do
    api = api_key
    build_number = timestamp_build_number

    # 1. Unit tests
    test

    # 2. Screenshots
    screenshots

    # 3. Code signing
    match(
      type: "appstore",
      readonly: is_ci,
      api_key: api
    )

    # 4. Set build number
    increment_build_number(
      build_number: build_number,
      xcodeproj: "EuroTravelTranslate.xcodeproj"
    )

    # 5. Build
    build_app(
      project: "EuroTravelTranslate.xcodeproj",
      scheme: "EuroTravelTranslate",
      export_method: "app-store",
      output_directory: "./build",
      output_name: "EuroTravelTranslate.ipa"
    )

    # 6. Upload to App Store with review submission
    upload_to_app_store(
      api_key: api,
      skip_screenshots: false,
      skip_metadata: false,
      force: true,
      submit_for_review: true,
      automatic_release: true,
      precheck_include_in_app_purchases: false
    )
  end
end
